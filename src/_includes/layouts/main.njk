<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		{% block customHeader %}
			<title>{{ site.title }}</title>
			<meta name="description" content="Hayden Soule's portfolio site.">
		{% endblock %}

		<link rel="stylesheet" href="{{ 'css/style.css' | minify }}">
		<script src="{{ 'js/main.js' | minify }}" language="JavaScript" type="text/javascript"></script>	

	</head>
	<body>
		<div class="h-screen bg-white">		
			{% include './partial/headers/header.njk' %}
			{{ content | safe }}
		</div>
	</body>
	<footer>
		{# Load JS for each page, defined on page template. Could also do this with blocks #}
		{% for page_library in page_libraries %}
			<script src="{{ page_library }}" type="text/javascript"></script>
		{% endfor %}

		{% for page_script in page_scripts %}
			<script src="{{ page_script | minify }}" type="text/javascript"></script>
		{% endfor %}
	</footer>
</html>