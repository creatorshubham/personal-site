---
layout: layouts/main.njk
title: Work
page_scripts: [js/workSort.js]
---

<div class="main-padding">

<h1 class="content-centre">{{ title }}</h1>
<div class="flex justify-center flex-wrap">
	 <a class="tag-button clickable" tag="all">
        all
    </a>
	, &nbsp

    {% for name, length in collections.tagList %}
		<a class="tag-button clickable" tag="{{ name }}">
			{{ name }}
		</a>
		{% if not loop.last %}
			, &nbsp
		{% endif %}

	{# {{ length }} #}
    {% endfor %}

</div>
	{# <h3>Projects: </h3>#}

<div class="card-holder">
	{% for post in collections.projects %}
		<div class="project-card" tags="{{ post.data.tags }}">
			<div class="project-card-info shadow">
				{% image 'thumb.png', post.data.title, 'thumbnail', 'thumbnail' %}
				<div class="project-card-padding">
					<a href="{{ post.url }}">{{ post.data.title }}</a>
					<p class="blurb">{{ post.data.blurb }}</p>
				</div>
			</div>
		</div>
	{% endfor %}
</div>

</div>