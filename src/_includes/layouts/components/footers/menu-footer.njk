{#
	Footer block used in the menu.
#}

<div class="w-full z-10 transition-spacing duration-500 px-6 sm:px-12 md:px-0">
	<div class="block-padding w-full">
		{% for social in site.about.social %}
			{% set socialIcon %}
				{% switch social.socialType %}
					{% case 'linkedin' %}
						fab fa-linkedin
					{% default %}
						fab fa-{{ social.socialType }}-square
				{% endswitch %}
			{% endset %}
			<a aria-label="{{ social.socialType }} - {{ social.socialTitle }}" class="group relative mr-4 md:mr-8 overflow-hidden" href="{{ social.url }}">
				<i class="{{ socialIcon }} relative text-3xl md:text-4xl transform duration-100 group-hover:scale-110 z-10">
					<div class="absolute inset-0 -z-1 overflow-hidden rounded-sm mt-1/7 ml-1/7 min-h-full w-full bg-secondary-accent transition-all duration-200 group-hover:ml-1/3 group-hover:bg-primary-accent"></div>
				</i>
				
			</a>	
		{% endfor %}
	</div>
</div>