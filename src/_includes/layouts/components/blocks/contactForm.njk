{#
	Contact Form.
#}

{% set formName %}
	{% if section.formName %}
		{{ section.formName }}
	{% else %}
		contact
	{% endif %}
{% endset %}

{% set successMessage %}
	{% if section.successMessage %}
		{{ section.successMessage }}
	{% else %}
		Message submitted successfully!
	{% endif %}
{% endset %}

<div class="relative flex align-center justify-center w-full main-padding">
	<form id="formContainer" class="w-full max-w-prose-full" name="{{ formName | slug }}" method="POST" action="{{ pageData.slug | slug }}/?{{ formName | slug }}=success" data-netlify="true" data-netlify-honeypot="bot-field">
		{# Needed for Netlify forms bot testing #}
		<input type="hidden" name="form-name" value="{{ formName | slug }}" />
		<div hidden aria-hidden="true">
			<label>
				Donâ€™t fill this out if you're human: 
				<input name="bot-field" />
			</label>
		</div>
		
		<div class="w-full mb-12">
			<label for="name" class="block mb-4 tracking-wider font-semibold leading-normal">Name</label>
			<input type="text" id="Name" name="name" class="text-input" required/>
		</div>

		<div class="w-full mb-12">
			<label for="email" class="block mb-4 tracking-wider font-semibold leading-normal">Email</label>
			<input type="email" id="Email" name="email" class="text-input" required/>
		</div>

		<div class="w-full mb-12">
			<label for="message" class="block mb-4 tracking-wider font-semibold leading-normal">Message</label>
			<textarea id="Message" name="message" rows="6" maxlength="3000" class="text-input" required></textarea>
		</div>

		<div class="w-full mb-12">
			{# <button type="submit" class="block px-6 tracking-wider font-semibold leading-loose border-2 border-primary-border bg-secondary-bg text-primary-text rounded-md
				hover:border-primary-accent hover:outline-none hover:shadow-lg hover:shadow-primary-accent hover:border-3">Send</button> #}
				<div class="relative md:inline-block group py-4 pr-16">
					<button class="relative block px-4 py-2 w-full bg-secondary-bg text-primary-text rounded-md shadow-md focus:outline-none font-semibold
						after:absolute after:inset-0 after:overflow-hidden after:bg-darker-bg after:opacity-0 hover:after:opacity-30 after:inner-shadow after:rounded-md">
							<span class="relative z-10">Send</span>
					</button>
			</div>	
		</div>

		<div class="w-full mb-12">
			{# <span id="success" class="hidden text-green-500 font-bold">{{ successMessage }}</span> #}
		
		</div>

	</form>
</div>