{#
	Contact Form.
#}

{% set formName %}
	{% if section.formName %}
		{{ section.formName }}
	{% else %}
		contact
	{% endif %}
{% endset %}

{% set successMessage %}
	{% if section.successMessage %}
		{{ section.successMessage }}
	{% else %}
		Message submitted successfully!
	{% endif %}
{% endset %}

<div class="relative flex align-center justify-center w-full main-padding">
	<form id="formContainer" class="w-full max-w-prose-full mb-8" name="{{ formName | slug }}" method="POST" action="https://contact.haydensoule.com/">
		<input type="hidden" name="receiver" value="{{ site.about.email }}" />
		<input type="hidden" name="successMessage" value="{{ successMessage }}" />

		<div hidden aria-hidden="true">
			<label>
				Donâ€™t fill this out if you're human: 
				<input name="bot-field"/>
			</label>
		</div>
		
		<div class="w-full mb-12">
			<label for="name" class="block mb-4 tracking-wider font-semibold leading-normal">Name <span class="align-super text-failure-accent">*</span></label>
			<input type="text" id="name" name="name" placeholder="Your Name"
				class="validator-field-validation block p-2 w-full bg-secondary-bg text-primary-text rounded-md shadow-inner focus:outline-none
					invalid:outline invalid:outline-2 invalid:outline-failure-accent"
				rules="required"
				/>
		</div>

		<div class="w-full mb-12">
			<label for="email" class="block mb-4 tracking-wider font-semibold leading-normal">Email <span class="align-super text-failure-accent">*</span></label>
			<input type="email" id="email" name="email"
				class="validator-field-validation block p-2 w-full bg-secondary-bg text-primary-text rounded-md shadow-inner focus:outline-none
					invalid:outline invalid:outline-2 invalid:outline-failure-accent"
				customErrorResponse="Put a real email ya goofus." />
		</div>

		<div class="w-full mb-12">
			<label for="message" class="block mb-4 tracking-wider font-semibold leading-normal">Message <span class="align-super text-failure-accent">*</span></label>
			<textarea id="message" name="message" rows="6" maxlength="3000"
				class="validator-field-validation block p-2 w-full bg-secondary-bg text-primary-text rounded-md shadow-inner focus:outline-none
					invalid:outline invalid:outline-2 invalid:outline-failure-accent"
				></textarea>
		</div>

		<div class="block md:inline mb-12">
			<div class="relative py-4 md:inline-block md:pr-16">
				<button class="g-recaptcha relative block px-4 py-2 w-full bg-secondary-bg text-primary-text rounded-md font-semibold overflow-hidden
					shadow-inner transition-all duration-200
					after:bg-gradient-to-r after:from-primary-accent after:to-secondary-accent after:shadow-inner-dark
					after:absolute after:left-0 after:right-0 after:bottom-0 after:overflow-hidden
					after:transition-all after:duration-200 after:h-0 hover:after:h-full hover:text-primary-bg
					before:absolute before:inset-0 before:bg-primary-bg before:opacity-0 active:opacity-60
					focus:outline-none"
					data-sitekey="6LfhR1ohAAAAABJFXPocs9NyudnQgvZNDH1DtQ3c" 
        			data-callback='onSubmit' 
       				data-action='submit'>
						<span class="relative z-10">Send</span>
				</button>
			</div>	
		</div>

		<div class="block md:inline mb-12">
			<span id="response" class="hidden text-green-500 font-bold"></span>
		</div>
	</form>
</div>